{
  "name": "shiki-extender",
  "version": "1.0.0",
  "description": "Shiki Extender - монорепозиторий для расширения Chrome и Node.js сервера",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "start:server": "npm run start --workspace=packages/server",
    "dev:extension": "npm run dev --workspace=packages/extension",
    "build:extension": "npm run build --workspace=packages/extension",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/shiki-extender.git"
  },
  "license": "MIT",
  "keywords": [
    "shiki",
    "chrome-extension",
    "nodejs",
    "monorepo",
    "workspaces"
  ]
}