{
  "manifest_version": 2,
  "name": "Shiki extender",
  "description": "",
  "version": "1.0.0",
  "options_page": "pages/main.html#options",
  
  "permissions": [
    "downloads",
    "notifications",
    "contextMenus",
    "tabs",
    "storage",
    "unlimitedStorage",
    "unlimited_storage",
    "*://*.pictshare.net/",
    "*://images.google.com/*",
    "*://google.com/*",
    "*://yandex.ru/*",
    "activeTab",
    "<all_urls>",
    "http://*/",
    "https://*/"
  ],


  "background": {
    "scripts": [
      "libs/axios/axios.min.js",
      "background.js"
    ]
  }
}